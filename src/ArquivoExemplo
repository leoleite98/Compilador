        declare var_6 float;
        
        var_1 <- 10;
        var_2 <- var_1 + 100;
        var_4 <- "Variavel 2 eh do tipo texto";
        var_5 <- false;

        if (var_1 $gt var_2) then
            
            begin
                var_4 <- "var_1 eh maior que var_2";
                var_5 <- true;
            
            end
        else

            begin
                var_4 <- "var_2 eh maior que var_1";
